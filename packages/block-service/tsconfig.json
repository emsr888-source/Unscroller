{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
