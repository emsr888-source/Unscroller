{
  "name": "@unscroller/desktop",
  "version": "1.0.0",
  "description": "Unscroller Desktop - Distraction-Free Social Browser",
  "author": "Unscroller Team",
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "rimraf dist release",
    "dev": "npm run build && electron .",
    "build": "tsc && npm run build:renderer",
    "build:renderer": "webpack --mode production",
    "start": "electron .",
    "rebuild:dev": "npm run clean && npm run build && npm run package:dev",
    "rebuild:release": "node scripts/release.js",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac dmg zip --arm64 --x64",
    "package:win": "electron-builder --win nsis zip --x64",
    "package:linux": "electron-builder --linux",
    "package:dev": "electron-builder --dir --config.directories.output=release/dev",
    "package:all": "npm-run-all package:mac package:win package:linux"
  },
  "build": {
    "appId": "com.unscroller.desktop",
    "productName": "Unscroller",
    "electronVersion": "35.7.5",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      {
        "from": "../../branding/png",
        "to": "branding",
        "filter": [
          "unscroller-logo-1024.png",
          "unscroller-logo-512.png",
          "unscroller-logo-256.png",
          "unscroller-logo-128.png",
          "unscroller-logo-64.png"
        ]
      }
    ],
    "artifactName": "Unscroller-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "build/icons/unscroller.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/unscroller.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "icon": "build/icons/png"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@unscroller/policy-engine": "*",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "copy-webpack-plugin": "^13.0.1",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.0",
    "html-webpack-plugin": "^5.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
