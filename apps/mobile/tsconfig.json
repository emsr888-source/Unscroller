{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "esModuleInterop": true,
    "types": ["expo", "node", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@unscroller/policy-engine": ["../../packages/policy-engine/src"],
      "@unscroller/policy-engine/*": ["../../packages/policy-engine/src/*"],
      "@unscroller/block-service": ["../../packages/block-service/src"],
      "@unscroller/block-service/*": ["../../packages/block-service/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
