# Creator Mode Backend - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/creatormode
ENABLE_DATABASE=true

# ============================================
# SUPABASE AUTHENTICATION
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================
# STRIPE PAYMENTS
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# ============================================
# OPENAI (AI Features)
# ============================================
OPENAI_API_KEY=
OPENAI_DAILY_BUDGET=10.00
ENABLE_AI_SCHEDULER=false

# ============================================
# POLICY SIGNING
# ============================================
POLICY_PRIVATE_KEY_PATH=./keys/policy-private.pem
POLICY_PATH=./policy/policy.json

# ============================================
# SECURITY
# ============================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:19006

# ============================================
# LOGGING & MONITORING
# ============================================
SENTRY_DSN=
LOG_LEVEL=info
DEBUG=false
LOG_REQUESTS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_AI_MAX=10
