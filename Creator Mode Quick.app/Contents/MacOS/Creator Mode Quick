#!/bin/bash

# Creator Mode Quick Launcher - Assumes backend is already running
echo "üöÄ Starting Creator Mode Desktop App..."

# Check if backend is running
if ! curl -s http://localhost:3001/api/policy > /dev/null 2>&1; then
    echo "‚ö†Ô∏è  Backend not running. Starting backend first..."
    cd /Users/onalime/CreatorMode/apps/backend
    POLICY_PATH=/Users/onalime/CreatorMode/policy/policy.json PORT=3001 npm run start:dev &
    sleep 5
fi

# Start desktop app
echo "üñ•Ô∏è  Starting desktop app..."
cd /Users/onalime/CreatorMode/apps/desktop
npm run dev
